#! /bin/bash
set -e

# accept a label (optionally) as the first parameter
MY_LABEL=""
if [ -n "$1" ]; then
  MY_LABEL="-$1"
fi

# build filename based on date and label
MY_FILE="`date +%Y-%m-%d-%I%M%S`$MY_LABEL.png"

# capture the cropped screenshot
echo "=> Select area to capture"
scrot -s "$MY_FILE"

# show result
echo "=> Captured: $MY_FILE"
gnome-paint "$MY_FILE" &

echo "=> Done."
