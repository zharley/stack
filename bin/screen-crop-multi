#! /bin/bash
set -e

# parameters passed to scrot
MY_PARAMS="-s"

if [ -n "$1" ]; then
    MY_PARAMS="$@"
fi

while [ 1 ]; do
  MY_FILE="`date +%Y-%m-%d-%I%M%S`.png"
  echo "=> Select area to capture or click window"
  scrot $MY_PARAMS "$MY_FILE"
  echo "=> Captured: $MY_FILE"
  read -n 1 -p "=> Press any key to continue (or CTRL+C to exit)..."
  echo ""
done
