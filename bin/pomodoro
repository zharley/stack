#! /bin/bash
set -e

MY_LOG="$1"
MY_DIR="$(cd "$(dirname "$0")" && pwd)"
MY_ETC="$MY_DIR/../etc"

if [ -z "$MY_LOG" ]; then
    echo "=> Not logging"
else
    echo "=> Logging to: $MY_LOG"
fi

for (( i = 1; ; i++ )); do
    if [ -n "$MY_LOG" ]; then
        read -p "=> Work cycle #$i: " MY_DESCRIPTION
        MY_TIMESTAMP=`date "+%Y-%m-%d %l:%M%P"`
        echo -e "$MY_TIMESTAMP\t$MY_DESCRIPTION"
        echo -e "$MY_TIMESTAMP\t$MY_DESCRIPTION" >> "$MY_LOG"
    else
        echo "=> Work cycle #$i"
    fi
  
    countdown 25 
    notify-send "Pomodoro - Work cycle #$i complete" "$MY_DESCRIPTION" --icon "$MY_ETC/pomodoro.png" --expire-time=300000 # 5 minutes
    echo -n "=> Press [Enter] to continue" && read
  
    echo "=> Break cycle #$i"
    countdown 5
    notify-send "Pomodoro - Break cycle #$i complete" "$MY_DESCRIPTION" --icon "$MY_ETC/pomodoro.png" --expire-time=300000 # 5 minutes
    echo -n "=> Press [Enter] to continue" && read
done
